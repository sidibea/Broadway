{% extends "BWFrontBundle::layout.html.twig" %}
{% block title %}{{ selected.name }}{% endblock %}
{% block bodyId %}layout{% endblock %} {% block bodyClass %} {% endblock %}

{% block content %}

    <div class="container">
        <section id="blogwrap">
            <div class="row-fluid">
                <div class="span8">
                    <div class="blog-second-item single">
                        <div class="row-fluid">
                            <div class="span5 product-images">
                                <a data-gal="prettyPhoto[gallery]" href="{{ asset('uploads/products/'~selected.images) }}" title="">
                                    <img width="350" class="img-polaroid" src="{{ asset('uploads/products/'~selected.images) }}" alt="" />
                                </a>


                            </div>
                            <div class="span7 product-content">
                                <h2 class="product-title">{{ selected.name }} <span>{{ selected.price }} FCFA</span></h2>
                                <p>{{ selected.description }}</p>

                                <div class="price">
                                    <span class="price-new">{{ selected.price }} FCFA</span>
                                    <br>
                                </div>
                                {{ form_start(form) }}

                                {# Les erreurs générales du formulaire. #}
                                {{ form_errors(form) }}
                                <div class="row-fluid">
                                    <div class="span2">
                                        <span class="required">*</span>
                                        <b>Qte:</b>
                                        <br>
                                        {{ form_widget(form.qty, {'attr': {'class': 'span12', 'size': '2', 'value': '1', 'placeholder' : '' }}) }}
                                    </div>
                                </div>

                                <p>
                                    <button type="submit" class="button"><i class="icon-shopping-cart"></i> Ajouter au panier</button>
                                </p>
                                {{ form_rest(form) }}

                                {# Fermeture de la balise <form> du formulaire HTML #}
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div><!-- /blog-second-item -->



                    <div class="reviews-tabs blog-second-item ">
                        <ul id="widgetTab2" class="nav nav-tabs">
                            <li class="active"><a href="#informations" data-toggle="tab">Informations</a></li>
                            <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
                        </ul>
