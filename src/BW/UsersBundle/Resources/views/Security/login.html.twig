                    <h3 class="post-title">Connexion / Inscription</h3>

                    <div class="row-fluid">
                        <div class="span5">
                            <h2>Deja Inscrit ?</h2>
                            <form class="signin-form"  action="{{ path('login_check') }}" method="post">
                                <input required="required" name="_username" value="{{ last_username }}" class="input-block-level" type="text" placeholder="Entrer votre adresse email" id="inputEmail" />
                                <input required="required" name="_password" class="input-block-level" placeholder="Entrer votre mot de passe" type="password" id="inputPassword" />
                                <button class="btn btn-medium btn-general input-block-level" type="submit">Connexion</button>
                                <label class="checkbox"><a href="#">J'ai oublier mon mot de passe</a> </label>

                            </form>
                        </div>
                        <div class="span7">
                            <h2>CRÉEZ VOTRE COMPTE</h2>
                            {{ form_start(form) }}

                            {# Les erreurs générales du formulaire. #}
                            {{ form_errors(form) }}

                                <label><span class="required">*</span> Details  Personnels</label>
                                {{ form_errors(form.firstname) }}
                                {{ form_widget(form.firstname, {'attr': {'class': 'input-block-level', 'placeholder' : '* Entrer votre nom' }}) }}

                            {{ form_errors(form.lastname) }}
                            {{ form_widget(form.lastname, {'attr': {'class': 'input-block-level', 'placeholder' : '* Entrer votre prenom' }}) }}

                            {{ form_errors(form.users.email) }}
                            {{ form_widget(form.users.email, {'attr': {'class': 'input-block-level', 'placeholder' : '* Entrer votre email' }}) }}

                            {{ form_errors(form.phone) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'input-block-level', 'placeholder' : '* Entrer votre numero de telephone' }}) }}
                            <input class="input-block-level" placeholder="Enter your phone number" type="text" id="inputphone" />
                                <label><span class="required">*</span> Adresse de livraison</label>
                            {{ form_errors(form.address1) }}
                            {{ form_widget(form.address1, {'attr': {'class': 'input-block-level', 'placeholder' : '* Adresse 1' }}) }}

                            {{ form_errors(form.address2) }}
                            {{ form_widget(form.address2, {'attr': {'class': 'input-block-level', 'placeholder' : '* Adresse 2' }}) }}

                                <label><span class="required">*</span> Choississez votre mot de passe</label>
                            {{ form_errors(form.users.plainPassword) }}
                            {{ form_widget(form.users.plainPassword, {'attr': {'class': 'input-block-level', 'placeholder' : '* Adresse 2' }}) }}

                            <p></p>
                                <button class="btn btn-medium btn-general input-block-level" type="submit">Register your account today!</button>
