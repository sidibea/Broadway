{% extends "BWAdminBundle::layout.html.twig" %}

{% block title %}
    Produits
{% endblock %}

{% block content %}

    <section class="content-header">
        <h1>
            Catalogue
            <small>Paneau d'Administration</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Acceuil</a></li>
            <li class="active">Produits</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <section class="col-lg-12 connectedSortable ui-sortable">
                <div class="box box-success" style="position: relative;">
                    <div class="box-header ui-sortable-handle" style="cursor: move;">
                        <i class="fa fa-institution"></i>
                        <h3 class="box-title">Listes des produits</h3>
                        <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Nouvelle categorie">
                            <div class="btn-group" >
                                <a href="{{ path('bw_add_products_homepage') }}" class="btn btn-default btn-sm "><i class="fa fa-plus text-green"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">


                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Description</th>
                                <th>Affichée</th>
                                <th></th>
                            </tr>
                            </thead>
                            {% for key, val in list %}
                                <tr>
                                    <td>{{ val.id }}</td>
                                    <td>{{ val.name }}</td>
                                    <td>{{ val.price }} FCFA</td>
                                    <td>{{ val.description }}</td>
                                    <td width="80px">
                                        {% if val.enabled == 0 %}
                                            <button class="btn btn-block btn-danger btn-flat">Inactif</button>
                                        {% elseif val.enabled == 1 %}
                                            <button class="btn btn-block btn-success btn-flat" style="width: 80px;">Active</button>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-success btn-flat" type="button">Action</button>
                                            <button data-toggle="dropdown" class="btn btn-success btn-flat dropdown-toggle" type="button">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul role="menu" class="dropdown-menu">
                                                <li><a href="" onclick=" return confirm('Voulez-vous vraiment supprimer [{{  val.name }}] ?');">Supprimer</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tbody>


                            </tbody>
                            <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Description</th>
                                <th>Affichée</th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>

                    </div>

                </div>

            </section>
        </div>
    </section>

{% endblock %}

{% block script %}
    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $("#example1").dataTable();
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": true,
                "bFilter": true,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": true
            });
            $('#nb_administrationbundle_filterbycompany_company').change(
                    function () {
                        $('#frmFilter').submit();
                    });
        });
    </script>

{% endblock %}